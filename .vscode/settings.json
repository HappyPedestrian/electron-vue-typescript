{
  // 统一换行符
  "files.eol": "\n",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  // ========================stylelint=====================
  "stylelint.validate": ["css", "less", "sass", "scss", "vue"],

  // 保存自动修复
  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": "explicit"
  }
  // ======================================================
}
